generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Lead {
  id              String   @id @default(cuid())
  companyName     String
  website         String?
  description     String?
  signal          String?
  insight         String?
  intentScore     Int?
  opportunityType String?
  tags            String?  // Stored as comma-separated or JSON string
  niche           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([companyName, website])
}

model VideoDemo {
  id          String   @id @default(uuid())
  founderId   String   @map("founder_id")
  title       String
  slug        String   @unique
  videoUrl    String   @map("video_url")
  videoPath   String   @map("video_path")
  metadata    Json?    @default("[]")
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("video_demos")
}
